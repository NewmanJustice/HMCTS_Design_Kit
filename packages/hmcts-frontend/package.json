{
  "name": "@hmcts/hmcts-frontend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/hmcts.css",
  "files": [
    "dist",
    "src"
  ],
  "style": "dist/hmcts.css",
  "scripts": {
    "build": "sass src/hmcts.scss dist/hmcts.css --no-source-map && postcss dist/hmcts.css -o dist/hmcts.css",
    "dev": "sass src/hmcts.scss dist/hmcts.css --watch",
    "lint": "stylelint \"src/**/*.scss\" --config .stylelintrc.cjs",
    "lint:fix": "stylelint \"src/**/*.scss\" --config .stylelintrc.cjs --fix"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.0.0"
  }
}
